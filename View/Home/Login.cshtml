<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    body {
        background: url('https://64.media.tumblr.com/366dfaf48731c9b22dd0c67286c2a8ab/tumblr_ofq1piMjTf1qe9qato1_1280.jpg')no-repeat center center fixed; /* pastel pink & violet */
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-circle {
        width: 400px;
        height: 400px;
        border-radius: 50%;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        background-color: #fff9db;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 30px;
        text-align: center;
    }

        .login-circle h4 {
            color: #d88f17;
            font-weight: bold;
            margin-botton: 10px;
        }

    .form-control {
        border-radius: 20px;
        border: 1px solid #ffc107;
        margin-bottom: 15px;
    }

    .btn-custom {
        background-color: #ffc107;
        border: none;
        color: white;
        font-weight: 500;
        border-radius: 20px;
        width: 100%;
    }

        .btn-custom:hover {
            background-color: #e0a800;
        }

    .signup-link {
        margin-top: 10px;
    }

        .signup-link a {
            color: #d88f17;
            text-decoration: none;
            font-weight: 500;
        }

            .signup-link a:hover {
                text-decoration: underline;
            }

    .login-form {
        width: 100%;
        max-width: 280px;
    }
</style>
@*</head>*@
<body>
    <div class=" text-center login-circle" style="margin:0 350px 0 350px">
        <h4>Welcome Back to <span style="color:#ff66b2;">Reva</span></h4>
        <p class="text-muted" style="font-style: italic; margin-bottom:20px;">Style Your Way</p>
        <form class="login-form" asp-controller="REVAVM" asp-action="Login">
            <input type="email" class="form-control" asp-for="RevaUserMstObj.Email" placeholder="Email " required />
            <input type="password"
                   class="form-control" asp-for="RevaUserMstObj.Password" placeholder="Password" required
                   pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{8,}"
                   title="Password must be at least 8 characters long and include an uppercase letter, a lowercase letter, a number, and a special character." />

            <button type="submit" class="btn btn-custom mt-2">Login</button>
        </form>
        <div class="signup-link">
            <p>New here? <a href="/Home/Signup">Sign Up</a></p>
        </div>
    </div>
</body>
